{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es2015",
        "module": "ESNext",
        "strict": false,
        "jsx": "react-jsx",
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true
    },    
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}