{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es2015",
        "module": "commonjs",
        "strict": false,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "src"
    ]
}